<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :username, :class => 'control-label' %>
    <%= f.text_field :username, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :dob, :class => 'control-label' %>:
    <%= f.date_select :dob, :class => 'datepicker' %>
  </div>
  <div class="form-group">
    <%= f.label :height, :class => 'control-label' %> in centimeters:
    <%= f.number_field :height, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :sex, :class => 'control-label' %>
    <%= f.number_field :sex, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :activity_level, :class => 'control-label' %>
    <%= f.number_field :activity_level, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_path(current_user), :class => 'btn' %>
    <%= link_to 'Account settings', edit_user_registration_path, :class => 'btn' %>
  </div>
<% end %>
