<%- model_class = Supplement -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human %> Stack</h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:brand) %></th>
      <th><%= model_class.human_attribute_name(:supplement_category_id) %></th>
      <th><%= model_class.human_attribute_name(:supplement_sub_category_id) %></th>
      <th><%= model_class.human_attribute_name(:servings) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @supplements.each do |supplement| %>
      <tr>
        <td><%= link_to supplement.id, supplement_path(supplement) %></td>
        <td><%= supplement.name %></td>
        <td><%= supplement.brand %></td>
        <td><%= supplement.supplement_category.name %></td>
        <td><%= supplement.supplement_sub_category.name %></td>
        <td><%= supplement.servings %></td>
        <td><%=l supplement.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_supplement_path(supplement), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      supplement_path(supplement),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add to your stack', user_new_supplements_path, :class => 'btn btn-primary' %>
