<%- model_class = DayEntry -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:entry_date) %></th>
      <th><%= model_class.human_attribute_name(:weight) %></th>
      <th><%= model_class.human_attribute_name(:bodyfat) %></th>
      <th><%= model_class.human_attribute_name(:bmi) %></th>
      <th>Hours of sleep</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @day_entries.each do |day_entry| %>
      <tr>
        <td><%= link_to day_entry.entry_date, day_entry_path(day_entry) %></td>
        <td><%= day_entry.weight %></td>
        <td><%= day_entry.bodyfat %></td>
        <td><%= day_entry.bmi %></td>
        <td><%= day_entry.sleep_time %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_day_entry_path(day_entry), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      day_entry_path(day_entry),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_day_entry_path,
            :class => 'btn btn-primary' %>
